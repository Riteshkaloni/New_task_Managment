# Ignore node_modules - standard practice
node_modules

# Ignore build output
dist
build
.next
out

# Ignore coverage reports
coverage

# Ignore logs
*.log

# Ignore environment variables
.env
.env.* 

# Ignore lock files if needed (usually you commit these)
package-lock.json
yarn.lock
pnpm-lock.yaml

# Ignore specific configuration files
.prettierignore
.prettierrc
.prettierrc.*
.eslintrc
.eslintrc.*

# Ignore assets or public files that shouldn't be formatted
public/*
!.prettierignore # still include this file itself

# Ignore generated files
*.min.js
*.bundle.js

# Ignore compiled TypeScript files
*.tsbuildinfo
